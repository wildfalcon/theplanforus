<div id="login_form">
	

<% form_for @user do |form| %>  
<h1>Register</h1>
<div id="plan_details">
	While we finish testing and make sure everything is worth paying for, we are 
	only letting people sign up for the free subscription. Don't worry though, you can upgrade 
	any time after we launch the other subscriptions.
</div>

<%= form.error_messages %>  
  <div class="clearfix">
		<div id="user_details">
		  <div>  
		    <div class="label"><%= form.label :username, "Username" %> </div>
		    <%= form.text_field :username %>  
		  </div>  
		  <div>  
		     <div class="label"><%= form.label :email, "Email" %> </div> 
		    <%= form.text_field :email %>  
		  </div>  
		  <div>  
		     <div class="label"><%= form.label :password, "Password" %>  </div>
		    <%= form.password_field :password %>  
		  </div>  
		  <div>  
		     <div class="label"><%= form.label :password_confirmation, "Password confirmation" %>  </div>
		    <%= form.password_field :password_confirmation %>  
		  </div>  
	  </div>
	</div>
  <div>  
    <%= form.submit "Sign me up" %>  
  </div>  

<% end %>
</div>