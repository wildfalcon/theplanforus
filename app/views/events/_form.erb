 <div class="inputs clearfix">
  <div class="center">
    <%= label_tag :primary %><br />
    <%= check_box :event, :primary %>
  </div>

  <div>
    <%= label_tag :name %><br />
    <%= text_field :event, :name %>
  </div>

  <div>
    <%= label_tag :date %><br />
		<%= text_field :event, :date, {:size=>"10",:class => "datepicker"} %> 
  </div>
	<div>
    <%= submit_tag 'Submit' %>
  </div>
</div>
  
	<script type="text/javascript">
	$(function() {
		$(".datepicker").datepicker();
	});
	</script>

