<div id="tabs">
	<ul>
		<li><a href="#weekly">Weekly</a></li>
		<li><a href="#daily">Daily</a></li>
		<li><a href="#events">Events</a></li>
		<li><a href="#lessons">Lessons</a></li>
	</ul>
	<%= render :partial => "daily",  :locals => {:days => @plan.days} %>
	<%= render :partial => "weekly", :locals => {:weeks => @plan.weeks} %>
	<%= render :partial => 'events/events',   :locals => {:events => @plan.events,   :plan => @plan} %>
	<%= render :partial => 'lessons/lessons', :locals => {:lessons => @plan.lessons, :plan => @plan} %>
</div>

<script type="text/javascript">
	$(function() {
		$("#tabs").tabs();
	});
</script>
