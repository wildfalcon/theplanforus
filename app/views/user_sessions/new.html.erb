
<div id="login" class="standard_form">  

	<% form_for @user_session do |form| %>  
		<h1>Login</h1>
		<%= form.error_messages %>  

	  <div class="input">  
	    <%= form.label :username, "Username" %> <br/>
	    <%= form.text_field :username, :tabindex => "1" %>  
	  </div>  
	  <div class="input">  
	    <%= form.label :password, "Password" %> 
			<span class="details"><%= link_to "(forgot password)", new_password_reset_path %></span>  
			<br/>
	    <%= form.password_field :password, :tabindex => "2" %>  
	  </div>  
	  <div>  
	    <%= form.submit "Login" %>  
	  </div>  
 
	<% end %>
</div>