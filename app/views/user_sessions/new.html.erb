<%# title "Log in" %>  
<div id="login_form">  
	Please log in.
<% form_for @user_session do |form| %>  
<%= form.error_messages %>  

  <div>  
    <%= form.label :username, "Username" %>  
    <%= form.text_field :username %>  
  </div>  
  <div>  
    <%= form.label :password, "Password" %>  
    <%= form.password_field :password %>  
  </div>  
  <div>  
    <%= form.submit "Submit" %>  
  </div>  
 
<% end %>
</div>