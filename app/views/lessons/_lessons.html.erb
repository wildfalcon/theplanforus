<div id="lessons">
	<table>
	  <tr>
	    <th>Teacher</th>
	    <th>Date</th>
	    <th>Start</th>
	    <th>End</th>
	  </tr>


	<%= render :partial => lessons %>
	</table>

	<% form_tag(plan_lessons_url(plan)) do  %>
	 <div class="inputs clearfix">
	  <div>
	    <%= label_tag :teacher %><br />
	    <%= text_field :lesson, :teacher %>
	  </div>

	  <div>
	    <%= label_tag :date %><br />
	    <%= date_select :lesson, :date %>
	  </div>

	  <div>
	    <%= label_tag :start %><br />
			<%= time_select :lesson, :start %> 
	  </div>

	  <div>
	    <%= label_tag :end %><br />
			<%= time_select :lesson, :end %> 
	  </div>

	</div>
	  <div>
	    <%= submit_tag 'Submit' %>
	  </div>
	<% end %>
</div>